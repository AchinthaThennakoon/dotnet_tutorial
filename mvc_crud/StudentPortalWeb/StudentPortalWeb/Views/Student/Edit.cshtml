@model StudentPortalWeb.Models.Entities.Student

@if (Model is null)
{
    <p>no student was found with this id</p>
}
else{

    <form method="post">


        <h1> Edit student</h1>

        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="type" name="id" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="type" name="name" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" name="Email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" name="Phone"  class="form-control" asp-for="Phone" />
        </div>

        <div>
            <input type="checkbox" name="name"  class="form-check-input" id="Subscribed" asp-for="IsSubscribed" />
            <label class="form-check-label" for="Subscribed">Subscribed</label>
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Student">delete</button>
        </div>

    </form>
}
